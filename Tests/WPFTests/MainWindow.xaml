<Window
    x:Class="WPFTests.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFTests"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            Width="53"
            Height="38"
            Margin="365,188,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            
            Content="Отправить" Click="OnSendButtonClick" />
        <TextBox
            x:Name="LoginEdit"
            Width="175"
            Height="21"
            Margin="144,141,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextChanged="TextBox_TextChanged"
            TextWrapping="Wrap" />
        <TextBlock
            Margin="144,103,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Имя пользоваиеля"
            TextWrapping="Wrap" />
        <PasswordBox
            x:Name="PasswordEdit"
            Width="204"
            Margin="485,141,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Label
            Margin="495,98,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Пароль" />

    </Grid>
</Window>

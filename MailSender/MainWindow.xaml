<Window
    x:Class="MailSender.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MailSender"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать" />
                <MenuItem Header="Открыть" />
                <MenuItem Header="Закрыть" />
                <MenuItem Header="Сохранить" />
                <Separator />
                <MenuItem Header="Выход" />
            </MenuItem>
            <MenuItem Header="Сервис">
                <MenuItem Header="Параметры" />

            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem DockPanel.Dock="Right">
                <ResizeGrip />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="Готов!" />
            </StatusBarItem>
            <Separator HorizontalAlignment="Left" />
        </StatusBar>
        <TabControl>
            <TabItem Header="Списки">
                <DockPanel>
                    <ToolBarTray DockPanel.Dock="Top">
                        <ToolBar Header="Сервера">
                            <ToolBar.Band>0</ToolBar.Band>
<ComboBox Margin="26,0,0,0" MinWidth="120" MaxWidth="200" SelectedIndex="1">
    <ComboBoxItem>smtp.yandex.ru:25</ComboBoxItem>
    <ComboBoxItem>smtp.gmail.com</ComboBoxItem>
    <ComboBoxItem>smtp.mail.ru</ComboBoxItem>
                            </ComboBox>
                            <Button Content="Add"></Button>
                            <Button Content="Edit"></Button>
                            <Button Content="Del"></Button>
                        </ToolBar>
                        <ToolBar Header="Отправители">
                            <ToolBar.Band>1</ToolBar.Band>
                            <ComboBox MinWidth="120" MaxWidth="200" SelectedIndex="1">
                                <ComboBoxItem>Петров</ComboBoxItem>
                                <ComboBoxItem>Сидоров</ComboBoxItem>
                                <ComboBoxItem>Иванов</ComboBoxItem>
                            </ComboBox>
                            <Button Content="Add"></Button>
                            <Button Content="Edit"></Button>
                            <Button Content="Del"></Button>
                        </ToolBar>
                        <ToolBar Header="Перейти в планировщик" Band="0">
                            <Button>Перейти</Button>
                        </ToolBar>
                        <ToolBar Header="Получатели" Band="1">
                            <Button Content="Add"></Button>
                            <Button Content="Edit"></Button>
                            <Button Content="Del"></Button>
                        </ToolBar>
                    </ToolBarTray>
                    <GroupBox Header="Список получаетелей">
                        <DataGrid >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" MinWidth="30" ></DataGridTextColumn>
                                <DataGridTextColumn Header="Имя" Width="*"></DataGridTextColumn>
                                <DataGridTextColumn Header="Адрес" MinWidth="160" ></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </DockPanel>
            </TabItem>
            <TabItem Header="Планировщик" />
            <TabItem Header="Письма" />
            <TabItem Header="Статистика" />

        </TabControl>
    </DockPanel>

</Window>
